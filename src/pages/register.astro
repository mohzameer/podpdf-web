---
/**
 * Register Page
 *
 * @description
 * User registration page with form and social authentication options.
 * Uses demo mode by default - configure action prop on RegisterForm for real backend.
 */
import MarketingLayout from '@/layouts/MarketingLayout.astro';
import RegisterForm from '@forms/RegisterForm.astro';
import SocialAuthButtons from '@forms/SocialAuthButtons.astro';
import { siteConfig } from '@/config';
---

<MarketingLayout
  title={`Sign Up - ${siteConfig.name}`}
  description="Create your free account. Use our visual web app or integrate our API. Get 100 free PDFs to start. Same speed as paid plans."
>
  <section class="py-section">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="max-w-md mx-auto">
        <!-- Card container -->
        <div class="bg-surface rounded-lg border border-border p-8 shadow-sm">
          <!-- Header -->
          <div class="text-center mb-8">
            <h1 class="text-2xl font-bold text-text">Start generating PDFs today</h1>
            <p class="mt-2 text-text-muted">Use our web app or API. Get 100 free PDFs. Same speed as paid plans. No credit card required.</p>
          </div>

          <!-- Register Form -->
          <RegisterForm />

          <!-- Social Auth -->
          <SocialAuthButtons dividerText="Or sign up with" variant="register" />

          <!-- Login link -->
          <p class="mt-6 text-center text-sm text-text-muted">
            Already have an account?{' '}
            <a
              href="https://app.podpdf.com/login"
              class="font-medium text-primary hover:text-primary-dark transition-colors"
            >
              Sign in
            </a>
          </p>
        </div>
      </div>
    </div>
  </section>
</MarketingLayout>
